<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_details_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_details_parent_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_contact_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintEnd_toEndOf="@+id/tv_contact_name"
            app:layout_constraintStart_toStartOf="@+id/tv_contact_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_name" />

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/place_holder"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_contact_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/place_holder"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_call"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="@+id/iv_call"
            app:layout_constraintTop_toBottomOf="@+id/iv_call" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="81dp"
            android:layout_height="66dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/ic_baseline_call_24"
            app:layout_constraintEnd_toEndOf="@+id/iv_contact_image"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/iv_contact_image"
            app:layout_constraintTop_toBottomOf="@+id/iv_contact_image" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_edit_note_24"
            app:layout_constraintBottom_toBottomOf="@+id/iv_share"
            app:layout_constraintEnd_toStartOf="@+id/iv_share"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="136dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="@+id/iv_share"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_share" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/place_holder"
            android:textSize="5sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_share"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="136dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toStartOf="@+id/iv_delete"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/iv_edit"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_phone_number" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
